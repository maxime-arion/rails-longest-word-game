<!-- app/views/games/new.html.erb -->

<h1>Word Game</h1>

<p>Try to make a word using the letters below:</p>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<%= form_with(url: score_path, method: :post, data: { turbo: false }) do |form| %>
  <label for="word">Your word:</label>
  <%= text_field_tag :word %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag "Submit" %>
<% end %>
